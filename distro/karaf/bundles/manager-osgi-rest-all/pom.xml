<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>apiman-osgi-bundles</artifactId>
        <groupId>io.apiman</groupId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>
    <artifactId>manager-osgi-rest-all</artifactId>
    <name>Apiman :: OSGI :: Manager REST Module will embedded dependencies</name>
    <packaging>bundle</packaging>

    <!-- minimal set of dependencies -->
    <dependencies>
        <dependency>
            <groupId>javax.ws.rs</groupId>
            <artifactId>javax.ws.rs-api</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-beans</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-config</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-core</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-security</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-rest-impl</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-es</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-gateway</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-export-import-api</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>apiman-manager-api-jpa</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.enterprise</groupId>
            <artifactId>cdi-api</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.searchbox</groupId>
            <artifactId>jest-common</artifactId>
            <version>0.1.6</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.elasticsearch</groupId>
            <artifactId>elasticsearch</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.apiman</groupId>
            <artifactId>resteasy-all</artifactId>
            <version>2.3.10.Final_1</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.weld</groupId>
            <artifactId>weld-osgi-bundle</artifactId>
            <version>2.3.0.Final</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>bundle-manifest</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <_wab>src/main/webapp/</_wab>
                        <Embed-Dependency>
                            apiman-manager-api-core,apiman-manager-api-config,apiman-manager-api-beans,
                            apiman-manager-api-security,apiman-manager-api-export-import-api,
                            apiman-manager-api-rest,apiman-manager-api-rest-impl,apiman-manager-api-core,
                            apiman-manager-api-gateway,apiman-manager-api-es,log4j-api,log4j-core;inline=true,
                        </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Embed-Directory>WEB-INF/lib</Embed-Directory>
                        <Web-ContextPath>/apiman</Web-ContextPath>
                        <Import-Package>
                            !io.apiman.manager.api*,
                            !io.apiman.gateway.engine*,
                            !io.apiman.common*,
                            !io.apiman.gateway.api.rest.contract*,
                            !org.jboss.resteasy*,
                            com.fasterxml.jackson.dataformat.xml*;resolution:=optional,
                            com.fasterxml.jackson.dataformat.yaml*;resolution:=optional,
                            com.lmax*;resolution:=optional,
                            javax.enterprise.inject.spi,
                            io.swagger.jaxrs*;resolution:=optional,
                            io.swagger.annotations*;resolution:=optional,
                            *
                        </Import-Package>
                        <!--
                            org.jboss.resteasy.cdi.osgi,
                            org.jboss.resteasy.plugins.interceptors.encoding,
                            org.jboss.resteasy.plugins.interceptors,
                            org.jboss.resteasy.plugins.providers,
                            org.jboss.resteasy.plugins.providers.jackson,
                            org.jboss.resteasy.plugins.server.servlet,
                            io.apiman.manager.api.es,
                            io.apiman.manager.api.rest.contract,
                            io.apiman.manager.api.rest.impl,
                            io.apiman.manager.api.exportimport,
                            io.apiman.common.servlet,
                            -->
                        <Require-Capability>
                            org.ops4j.pax.cdi.extension;filter:="(&amp;(extension=pax-cdi-extension)(version>=0.11)(!(version>=0.12)))",
                            osgi.extender;filter:="(osgi.extender=pax.cdi)",
                            osgi.ee;filter:="(&amp;(osgi.ee=JavaSE)(version=1.6))"
                        </Require-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>