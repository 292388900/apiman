<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.apiman</groupId>
    <artifactId>apiman-distro</artifactId>
    <version>1.1.4-SNAPSHOT</version>
  </parent>
  <artifactId>apiman-distro-ddl</artifactId>
  <name>apiman-distro-ddl</name>

  <properties>
    <!-- Live Database Hosts-->
    <hostname.postgresql.live.db>db-server.punagroup.com</hostname.postgresql.live.db>
    <hostname.mysql.live.db>db-server.punagroup.com</hostname.mysql.live.db>
    <!-- Database Driver Versions-->
    <version.org.postgresql.jdbc.driver>9.4-1201-jdbc41</version.org.postgresql.jdbc.driver>
    <version.mysql.jdbc.driver>5.1.35</version.mysql.jdbc.driver>
  </properties>

  <dependencies>
    <!-- Project Dependencies -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-manager-api-beans</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Third Party Dependencies -->
    <dependency>
      <groupId>org.hibernate.javax.persistence</groupId>
      <artifactId>hibernate-jpa-2.1-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.hibernate</groupId>
      <artifactId>hibernate-entitymanager</artifactId>
      <version>4.3.1.Final</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
        <version>3.3.5</version>
        <dependencies>
          <!-- Database drivers-->
          <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>${version.com.h2database}</version>
          </dependency>
          <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>${version.org.postgresql.jdbc.driver}</version>
          </dependency>
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${version.mysql.jdbc.driver}</version>
          </dependency>
          <!-- Liquibase -->
          <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
            <version>3.3.2</version>
          </dependency>
          <dependency>
            <groupId>org.liquibase.ext</groupId>
            <artifactId>liquibase-hibernate4</artifactId>
            <version>3.5</version>
          </dependency>
          <!-- Note: the dependency versions below are specific
           to the liquibase-hibernate4 version being used above. -->
          <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
            <version>3.2.4.RELEASE</version>
          </dependency>
          <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>3.2.4.RELEASE</version>
          </dependency>
          <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-orm</artifactId>
            <version>3.2.4.RELEASE</version>
          </dependency>
          <dependency>
            <groupId>org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
            <version>1.15</version>
          </dependency>
        </dependencies>
        <configuration>
          <changeLogFile>${basedir}/src/main/liquibase/master.xml</changeLogFile>
          <diffChangeLogFile>${basedir}/target/entities-diff.xml</diffChangeLogFile>
          <!--<diffChangeLogFile>${basedir}/src/main/liquibase/entities-diff.xml</diffChangeLogFile>-->
          <outputFileEncoding>UTF-8</outputFileEncoding>
          <diffIncludeCatalog>false</diffIncludeCatalog>
        </configuration>
        <executions>
          <execution>
            <id>h2-entities-diff</id>
            <phase>process-resources</phase>
            <goals>
              <goal>diff</goal>
            </goals>
            <configuration>
              <url>jdbc:h2:${basedir}/src/main/db/current/apiman_empty</url>
              <username>sa</username>
              <emptyPassword>true</emptyPassword>
              <!-- May be a comma separated list of packages to scan -->
              <referenceUrl>hibernate:spring:io.apiman.manager.api.beans?dialect=liquibase.ext.hibernate.database.HibernateGenericDialect</referenceUrl>
            </configuration>
          </execution>
          <execution>
            <id>h2-ddl</id>
            <phase>process-resources</phase>
            <goals>
              <goal>updateSQL</goal>
            </goals>
            <configuration>
              <migrationSqlOutputFile>${basedir}/target/apiman_h2.ddl</migrationSqlOutputFile>
              <!--<migrationSqlOutputFile>${basedir}/src/main/generated/current/apiman_h2.ddl</migrationSqlOutputFile>-->
              <driver>org.h2.Driver</driver>
              <url>jdbc:h2:${basedir}/src/main/db/current/apiman_empty;DATABASE_TO_UPPER=false;</url>
              <username>sa</username>
              <emptyPassword>true</emptyPassword>
              <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
              <verbose>true</verbose>
            </configuration>
          </execution>
          <execution>
            <id>postgresql-ddl</id>
            <!--<phase>process-resources</phase>-->
            <goals>
              <goal>updateSQL</goal>
            </goals>
            <configuration>
              <migrationSqlOutputFile>${basedir}/target/apiman_postgresql.ddl</migrationSqlOutputFile>
              <!--<migrationSqlOutputFile>${basedir}/src/main/generated/current/apiman_postgresql.ddl</migrationSqlOutputFile>-->
              <driver>org.postgresql.Driver</driver>
              <url>jdbc:postgresql://${hostname.postgresql.live.db}:5432/apiman_empty</url>
              <username>apiman</username>
              <password>apiman</password>
              <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
              <verbose>true</verbose>
            </configuration>
          </execution>
          <execution>
            <id>mysql-ddl</id>
            <!--<phase>process-resources</phase>-->
            <goals>
              <goal>updateSQL</goal>
            </goals>
            <configuration>
              <migrationSqlOutputFile>${basedir}/target/apiman_mysql.ddl</migrationSqlOutputFile>
              <!--<migrationSqlOutputFile>${basedir}/src/main/generated/current/apiman_mysql.ddl</migrationSqlOutputFile>-->
              <driver>com.mysql.jdbc.Driver</driver>
              <url>jdbc:mysql://${hostname.mysql.live.db}:3306/apiman_empty</url>
              <username>apiman</username>
              <password>apiman</password>
              <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
              <verbose>true</verbose>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
